<div class="container">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-primary text-white border-0 rounded-4 shadow">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h2 class="fw-bold mb-2">
                                <i class="bi bi-emoji-smile me-2"></i>Xin chào, <%= user.username %>!
                            </h2>
                            <p class="mb-0 opacity-75">
                                <i class="bi bi-mortarboard me-1"></i>GVCN: <%= user.teacherName %>
                            </p>
                        </div>
                        <div class="col-md-4 text-md-end mt-3 mt-md-0">
                            <span class="badge bg-light text-primary fs-6 px-3 py-2 rounded-pill">
                                <i class="bi bi-calendar-event me-1"></i>Hội Trại Xuân 2026
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Status Cards -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3 mb-md-0">
            <div class="card h-100 border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-success-subtle text-success rounded-3 p-3 me-3">
                            <i class="bi bi-bank fs-4"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Thông tin ngân hàng</h5>
                            <% if (representative) { %>
                            <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Đã đăng ký</span>
                            <% } else { %>
                            <span class="badge bg-warning text-dark"><i class="bi bi-exclamation-circle me-1"></i>Chưa đăng ký</span>
                            <% } %>
                        </div>
                    </div>
                    <% if (representative) { %>
                    <div class="bg-light rounded-3 p-3">
                        <p class="mb-1"><strong>Đại diện:</strong> <%= representative.representativeName %></p>
                        <p class="mb-0"><strong>Số tài khoản:</strong> <%= representative.accounts ? representative.accounts.length : 0 %> tài khoản</p>
                    </div>
                    <% } %>
                    <a href="/register-rep" class="btn btn-outline-success w-100 mt-3 rounded-3">
                        <i class="bi bi-pencil me-1"></i><%= representative ? 'Cập nhật' : 'Đăng ký ngay' %>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3 mb-md-0">
            <div class="card h-100 border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-info-subtle text-info rounded-3 p-3 me-3">
                            <i class="bi bi-people fs-4"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Học sinh mở TK</h5>
                            <span class="badge bg-info"><%= students.length %> học sinh</span>
                        </div>
                    </div>
                    <% if (students.length > 0) { %>
                    <div class="bg-light rounded-3 p-3">
                        <p class="mb-0">Mới nhất: <strong><%= students[0].fullName %></strong></p>
                    </div>
                    <% } else { %>
                    <div class="bg-light rounded-3 p-3">
                        <p class="mb-0 text-muted">Chưa có học sinh nào</p>
                    </div>
                    <% } %>
                    <a href="/register-student" class="btn btn-outline-info w-100 mt-3 rounded-3">
                        <i class="bi bi-person-plus me-1"></i>Đăng ký mở TK
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-box bg-warning-subtle text-warning rounded-3 p-3 me-3">
                            <i class="bi bi-egg-fried fs-4"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Món ăn</h5>
                            <span class="badge bg-warning text-dark"><%= foodItems.length %> món</span>
                        </div>
                    </div>
                    <% if (foodItems.length > 0) { %>
                    <div class="bg-light rounded-3 p-3">
                        <p class="mb-0">Mới nhất: <strong><%= foodItems[0].name %></strong></p>
                    </div>
                    <% } else { %>
                    <div class="bg-light rounded-3 p-3">
                        <p class="mb-0 text-muted">Chưa đăng ký món ăn</p>
                    </div>
                    <% } %>
                    <a href="/register-food" class="btn btn-outline-warning w-100 mt-3 rounded-3">
                        <i class="bi bi-plus-circle me-1"></i><%= foodItems.length > 0 ? 'Xem danh sách' : 'Đăng ký ngay' %>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Thao tác nhanh</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-6 col-md-3">
                            <a href="/register-rep" class="btn btn-light w-100 py-3 rounded-3 text-decoration-none">
                                <i class="bi bi-bank text-success fs-4 d-block mb-2"></i>
                                <span class="small">Đăng ký NH</span>
                            </a>
                        </div>
                        <div class="col-6 col-md-3">
                            <a href="/register-student" class="btn btn-light w-100 py-3 rounded-3 text-decoration-none">
                                <i class="bi bi-person-plus text-info fs-4 d-block mb-2"></i>
                                <span class="small">Mở TK NH</span>
                            </a>
                        </div>
                        <div class="col-6 col-md-3">
                            <a href="/register-food" class="btn btn-light w-100 py-3 rounded-3 text-decoration-none">
                                <i class="bi bi-egg-fried text-warning fs-4 d-block mb-2"></i>
                                <span class="small">Đăng ký món ăn</span>
                            </a>
                        </div>
                        <div class="col-6 col-md-3">
                            <a href="/logout" class="btn btn-light w-100 py-3 rounded-3 text-decoration-none">
                                <i class="bi bi-box-arrow-right text-danger fs-4 d-block mb-2"></i>
                                <span class="small">Đăng xuất</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
